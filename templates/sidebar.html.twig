{% extends 'base.html.twig' %}

    {% block stylesheets %}
        <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #1E3A8A; /* Dark blue */
            color: white;
            padding: 20px;
            position: fixed;
            top: 0;
            left: 0;
            transition: all 0.3s ease;
        }

        .sidebar-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .sidebar-header h2 {
            font-size: 24px;
            margin: 0;
        }

        .sidebar-list {
            list-style: none;
            padding: 0;
        }

        .sidebar-list li {
            margin: 20px 0;
        }

        .sidebar-list a {
            color: white;
            text-decoration: none;
            font-size: 18px;
            padding: 10px;
            display: block;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .sidebar-list a:hover {
            background-color: #3B82F6; /* Lighter blue for hover effect */
        }

        .content {
            padding: 20px;
            flex-grow: 1;
        }

        /* Responsive design for smaller screens */
        @media (max-width: 768px) {
            .sidebar {
                width: 200px;
                padding: 15px;
            }

            .sidebar-header h2 {
                font-size: 20px;
            }

            .sidebar-list a {
                font-size: 16px;
            }

            .content {
                margin-left: 0;
                padding: 15px;
            }
        }
        </style>
    {% endblock %}
{% block body %}
    <div class="sidebar">
        <div class="sidebar-header">
            <h2>My Sidebar</h2>
        </div>
        <ul class="sidebar-list">
            <li><a href="{{ path('crud.course.all') }}">Courses</a></li>
            <li><a href="{{ path('crud.roadmaps.all') }}">Roadmaps</a></li>
        </ul>
    </div>

{% endblock %}
