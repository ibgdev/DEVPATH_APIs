{% block body %}
    <div class="layout-container">
        {% include 'sidebar.html.twig' %}
        
        <div class="main-content">
            <h1>Add a new Course</h1>
            {{ form(form) }}
        </div>
    </div>

    <style>
        .layout-container {
            display: flex;
        }

